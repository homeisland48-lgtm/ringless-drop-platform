{
  "name": "Ringless Drop Platform",
  "description": "Multi-user ringless voicemail campaign platform with Slybroadcast integration",
  "repository": "https://github.com/your-username/ringless-drop-platform",
  "logo": "https://cdn.jsdelivr.net/gh/your-username/ringless-drop-platform/logo.png",
  "keywords": ["voicemail", "marketing", "slybroadcast", "campaigns"],
  "image": "heroku/nodejs",
  "stack": "heroku-20",
  "env": {
    "NODE_ENV": {
      "description": "Environment (production for live use)",
      "value": "production"
    },
    "JWT_SECRET": {
      "description": "Secret key for JWT tokens (click generate)",
      "generator": "secret"
    },
    "SLYBROADCAST_USERNAME": {
      "description": "Your Slybroadcast username",
      "value": "YOUR_USERNAME_HERE"
    },
    "SLYBROADCAST_PASSWORD": {
      "description": "Your Slybroadcast password",
      "value": "YOUR_PASSWORD_HERE"
    },
    "SLYBROADCAST_ENDPOINT": {
      "description": "Slybroadcast API endpoint",
      "value": "https://www.mobile-sphere.com/gateway/vmb.php"
    },
    "DB_PASSWORD": {
      "description": "Database password (click generate)",
      "generator": "secret"
    },
    "PORT": {
      "description": "Port for the application",
      "value": "5000"
    }
  },
  "addons": [
    {
      "plan": "jawsdb:kitefin",
      "as": "DATABASE"
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "scripts": {
    "postdeploy": "node setup-database.js"
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "eco"
    }
  }
}